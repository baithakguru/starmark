<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:id="@+id/contactSelectRoot"
>
    <de.hdodenhof.circleimageview.CircleImageView android:layout_width="64dp" android:layout_height="64dp"
    android:src="@color/colorAccent"
    android:layout_margin="8dp"/>
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
    android:orientation="vertical"
                  android:padding="8dp"
    android:layout_marginStart="85dp"
    android:layout_centerVertical="true">
        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:text="name"
                  android:textColor="@color/colorPrimary"
                  android:textSize="18sp"
                  android:id="@+id/viewHolderNamePerson"
                  android:layout_marginBottom="8dp"
        />
        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:text="nsdsdsdsdsdsddsame"
                  android:alpha=".8"
                  android:id="@+id/viewHolderPhonePerson"
        />
    </LinearLayout>



</RelativeLayout>